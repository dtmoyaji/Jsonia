{
  ".accordion": {
    "border": "1px solid #ddd",
    "borderRadius": "4px",
    "overflow": "hidden"
  },

  ".accordion-item": {},

  ".accordion-header": {
    "padding": "12px 16px",
    "background": "#34495e",
    "position": "relative",
    "zIndex": "2",
    "pointerEvents": "auto",
    "cursor": "pointer",
    "color": "white",
    "fontWeight": "bold",
    "borderBottom": "1px solid #ddd",
    "display": "flex",
    "alignItems": "center",
    "gap": "8px"
  },

  ".accordion-icon": {
    "fontSize": "14px",
    "transition": "transform 0.3s ease",
    "transform": "rotate(0deg)"
  },

  ".accordion-icon.rotated": {
    "transform": "rotate(-90deg) !important"
  },

  ".accordion-header.expanded .accordion-icon": {
    "transform": "rotate(0deg)"
  },

  ".accordion-header:not(.expanded) .accordion-icon": {
    "transform": "rotate(-90deg) !important"
  },

  ".accordion-header:hover": {
    "background": "#2e4450"
  },
  ".accordion-header.expanded": {
    "background": "#34495e",
    "textShadow": "0 1px 2px rgba(0,0,0,0.5)"
  },

  ".accordion-content": {
    "overflow": "hidden",
    "transition": "max-height 0.25s ease, opacity 0.2s ease"
  },

  ".accordion-content.collapsed": {
    "maxHeight": "0",
    "opacity": "0",
    "overflow": "hidden"
  },

  ".accordion-content:not(.collapsed)": {
    "maxHeight": "2000px",
    "opacity": "1"
  },

  "#drop-zone .accordion-content.collapsed.slot-drop-zone": {
    "maxHeight": "none",
    "opacity": "1",
    "display": "block",
    "minHeight": "60px"
  }
}