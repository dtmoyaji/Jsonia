          {
            "tag": "div",
            "attributes": {
              "class": "dropdown-item",
              "data-dropdown-item": "true",
              "data-value": "option3",
              "style": "padding: 8px 16px; cursor: pointer;"
            },
            "text": "„Ç™„Éó„Ç∑„Éß„É≥ 3"
          }
        ]
      }
    ]
  },
  "defaultAttributes": {
    "class": "dropdown"
  },
  "behavior": {
    "methods": {
      "toggle": {
        "description": "„Éâ„É≠„ÉÉ„Éó„ÉÄ„Ç¶„É≥„É°„Éã„É•„Éº„ÅÆË°®Á§∫/ÈùûË°®Á§∫„Çí„Éà„Ç∞„É´",
        "params": ["dropdownId"],
        "steps": [
          { "type": "dom.select", "selector": "[data-dropdown-menu]", "output": "menu" },
          { "type": "if", "condition": "{{menu}}", "then": [
            { "type": "dom.toggleClass", "target": "{{menu}}", "className": "hidden" }
          ]}
        ]
      },
      "selectItem": {
        "description": "„Éâ„É≠„ÉÉ„Éó„ÉÄ„Ç¶„É≥„ÅÆ„Ç¢„Ç§„ÉÜ„É†„ÇíÈÅ∏Êäû",
        "params": ["value"],
        "steps": [
          { "type": "setState", "key": "selectedItem", "value": "{{value}}" },
          { "type": "component.method", "method": "toggle", "params": {} },
          { "type": "console", "message": "‚úÖ „Ç¢„Ç§„ÉÜ„É†ÈÅ∏Êäû: {{value}}" }
        ]
      }
    },
    "events": [
      {
        "target": "[data-dropdown-toggle]",
        "type": "click",
        "actions": [
          {
            "type": "component.method",
            "method": "toggle",
            "params": {}
          }
        ]
      },
      {
        "target": "[data-dropdown-item]",
        "type": "click",
        "actions": [
          {
            "type": "util.getAttribute",
            "target": "{{event.currentTarget}}",
            "name": "data-value",
            "output": "value"
          },
          {
            "type": "component.method",
            "method": "selectItem",
            "params": { "value": "{{value}}" }
          }
        ]
      }
    ]
  }
}
