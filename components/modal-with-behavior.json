{
  "icon": "ü™ü",
  "name": "„É¢„Éº„ÉÄ„É´",
  "tag": "div",
  "type": "container",
  "category": "interactive",
  "description": "„Éù„ÉÉ„Éó„Ç¢„ÉÉ„ÉóË°®Á§∫„Åï„Çå„Çã„É¢„Éº„ÉÄ„É´„ÉÄ„Ç§„Ç¢„É≠„Ç∞",
  "template": {
    "tag": "div",
    "attributes": {
      "class": "modal-overlay hidden",
      "data-modal": "modal-1",
      "style": "position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); display: flex; align-items: center; justify-content: center; z-index: 1000;"
    },
    "children": [
      {
        "tag": "div",
        "attributes": { 
          "class": "modal-content",
          "style": "background: white; border-radius: 8px; max-width: 500px; width: 90%; box-shadow: 0 4px 20px rgba(0,0,0,0.3);"
        },
        "children": [
          {
            "tag": "div",
            "attributes": { 
              "class": "modal-header",
              "style": "padding: 16px 20px; border-bottom: 1px solid #ddd; display: flex; justify-content: space-between; align-items: center;"
            },
            "children": [
              {
                "tag": "h3",
                "text": "„É¢„Éº„ÉÄ„É´„Çø„Ç§„Éà„É´",
                "attributes": {
                  "style": "margin: 0; font-size: 18px;"
                }
              },
              {
                "tag": "button",
                "attributes": {
                  "class": "modal-close",
                  "data-modal-close": "true",
                  "style": "background: none; border: none; font-size: 24px; cursor: pointer; color: #666;"
                },
                "text": "√ó"
              }
            ]
          },
          {
            "tag": "div",
            "attributes": { 
              "class": "modal-body",
              "style": "padding: 20px;"
            },
            "children": []
          },
          {
            "tag": "div",
            "attributes": { 
              "class": "modal-footer",
              "style": "padding: 16px 20px; border-top: 1px solid #ddd; text-align: right;"
            },
            "children": [
              {
                "tag": "button",
                "text": "„Ç≠„É£„É≥„Çª„É´",
                "attributes": {
                  "class": "btn",
                  "style": "padding: 8px 16px; margin-right: 8px; background: #6c757d; color: white; border: none; border-radius: 4px; cursor: pointer;"
                }
              },
              {
                "tag": "button",
                "text": "OK",
                "attributes": {
                  "class": "btn btn-primary",
                  "style": "padding: 8px 16px; background: #007bff; color: white; border: none; border-radius: 4px; cursor: pointer;"
                }
              }
            ]
          }
        ]
      }
    ]
  },
  "defaultAttributes": {
    "class": "modal-overlay"
  },
  "behavior": {
    "state": {
      "isOpen": false
    },
    "apis": {
      "open": {
        "type": "custom",
        "handler": [
          {
            "type": "setState",
            "key": "isOpen",
            "value": true
          },
          {
            "type": "dom.select",
            "selector": "[data-modal='{{modalId}}']",
            "storeIn": "modal"
          },
          {
            "type": "dom.removeClass",
            "element": "{{modal}}",
            "className": "hidden"
          }
        ]
      },
      "close": {
        "type": "custom",
        "handler": [
          {
            "type": "setState",
            "key": "isOpen",
            "value": false
          },
          {
            "type": "dom.select",
            "selector": "[data-modal='{{modalId}}']",
            "storeIn": "modal"
          },
          {
            "type": "dom.addClass",
            "element": "{{modal}}",
            "className": "hidden"
          }
        ]
      }
    },
    "events": [
      {
        "target": "[data-modal-close]",
        "type": "click",
        "actions": [
          {
            "type": "api",
            "name": "close"
          }
        ]
      },
      {
        "target": ".modal-overlay",
        "type": "click",
        "actions": [
          {
            "type": "if",
            "condition": "{{event.target.classList.contains('modal-overlay')}}",
            "then": [
              {
                "type": "api",
                "name": "close"
              }
            ]
          }
        ]
      }
    ]
  }
}
