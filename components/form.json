{
  "extends": "component",
  "icon": "📋",
  "name": "フォーム",
  "tag": "form",
  "type": "container",
  "category": "form",
  "description": "入力フォーム要素のコンテナ",
  "template": {
    "tag": "form",
    "attributes": {
      "class": "form",
      "method": "post",
      "data-slot": "children",
      "style": "max-width: 400px; padding: 20px; border: 1px solid #ddd; border-radius: 8px; background: #f9f9f9;"
    },
    "children": [
      {
        "tag": "div",
        "attributes": {
          "class": "form-group",
          "style": "margin-bottom: 16px;"
        },
        "children": [
          {
            "tag": "label",
            "text": "お名前",
            "attributes": {
              "style": "display: block; margin-bottom: 4px; font-weight: bold;"
            }
          },
          {
            "tag": "input",
            "attributes": {
              "type": "text",
              "name": "name",
              "class": "form-input",
              "style": "width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;"
            }
          }
        ]
      },
      {
        "tag": "button",
        "text": "送信",
        "attributes": {
          "type": "submit",
          "class": "btn",
          "style": "background: #007bff; color: white; border: none; padding: 10px 20px; border-radius: 4px; cursor: pointer;"
        }
      }
    ]
  },
  "defaultAttributes": {
    "class": "form",
    "method": "post"
  }
}